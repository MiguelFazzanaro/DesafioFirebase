<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    tools:context=".ui.DetalhesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivDetalheGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/splash_firebase"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="230dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbEditGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:clickable="true"
                android:foregroundTint="#FFFF0000"
                app:srcCompat="@drawable/ic_pencil"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="2000dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearTop"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetalheNome"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="God of War"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#FF000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="20dp"
                        android:text="LanÃ§amento: "
                        android:textSize="15dp"
                        android:textColor="#FF000000"/>

                    <TextView
                        android:id="@+id/tvDetalheAno"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="2021"
                        android:textColor="#FF000000"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tvDetalheDescricao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="AAAAAAAAAA"
                android:textColor="#FF000000"/>



        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>